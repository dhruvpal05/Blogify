<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogify</title>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container my-3">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImgURL %>" width="700px" />
            <pre class="mx-3 my-3"><%= blog.body %></pre>
        </div>
        <div class="container my-3">
            <img src="<%= blog.createdBy.profileImgUrl %>" width="60px" />
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <h3>Comments</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control mt-2" placeholder="Enter your comment">
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
                <% } %>
        </div>
        <div class="mt-3">
            <% comments.forEach(comment=> { %>
                <div>
                    <img src="<%= comment.createdBy.profileImgUrl %>" width="60px" />
                    <%= comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                </div>
                <% }) %>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>